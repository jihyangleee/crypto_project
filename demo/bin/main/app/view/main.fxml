<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.controller.MainController">
  <fx:define>
    <ToggleGroup fx:id="modeGroup" />
  </fx:define>
  <top>
    <VBox spacing="6" BorderPane.alignment="CENTER">
      <HBox spacing="10">
        <padding>
          <Insets top="10" right="10" bottom="10" left="10" />
        </padding>
  <Label text="Communication mode" />
        <RadioButton fx:id="clientRadio" text="Client" toggleGroup="$modeGroup" />
        <RadioButton fx:id="serverRadio" text="Server" toggleGroup="$modeGroup" />
        <Label text="Host:" />
        <TextField fx:id="hostField" text="127.0.0.1" prefWidth="120" />
        <Label text="Port:" />
        <TextField fx:id="portField" text="5000" prefWidth="80" />
        <Button fx:id="connectBtn" text="Connect" />
        <Button fx:id="startServerBtn" text="Start Server" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="statusLabel" text="Not connected" />
      </HBox>
      <HBox spacing="6">
        <padding>
          <Insets top="6" right="6" bottom="6" left="6" />
        </padding>
        <TextField fx:id="infoField" promptText="Obtain relevant information for user for each mode" HBox.hgrow="ALWAYS" />
      </HBox>
    </VBox>
  </top>

  <center>
    <VBox spacing="8">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
      </padding>
      <TitledPane text="Keys" expanded="true">
        <VBox spacing="6">
          <padding>
            <Insets top="6" right="6" bottom="6" left="6" />
          </padding>
          <TextArea fx:id="myKeyArea" prefRowCount="3" promptText="Public/Private key pair information" />
          <HBox spacing="6">
            <Button fx:id="genKeyBtn" text="Key generation" />
            <Button fx:id="loadKeyBtn" text="Load from a file" />
            <Button fx:id="saveKeyBtn" text="Save into a file" />
            <Button fx:id="sendPubBtn" text="Send public key" />
          </HBox>
          <HBox spacing="6">
            <Label text="Encryption policy:" />
            <ChoiceBox fx:id="policyBox" prefWidth="140" />
            <Button fx:id="demoBtn" text="Demo Send &amp; Verify" />
          </HBox>
          <TextArea fx:id="peerKeyArea" prefRowCount="2" promptText="Another user's public key information" />
          <TextArea fx:id="demoLog" prefRowCount="4" editable="false" promptText="Demo log output" />
          <HBox spacing="6">
            <Label text="Key / AES (base64|hex):" />
            <TextField fx:id="inspectKeyField" HBox.hgrow="ALWAYS" />
            <Button fx:id="viewEncFileBtn" text="View Encrypted File" />
            <Button fx:id="decryptEncFileBtn" text="Decrypt Enc File" />
          </HBox>
          <HBox spacing="6">
            <CheckBox fx:id="encryptSigCheck" text="Encrypt signature with AES" />
          </HBox>
          <HBox spacing="6">
            <Button fx:id="viewWrappedAesBtn" text="View Wrapped AES" />
            <Button fx:id="decryptWrappedAesBtn" text="Decrypt Wrapped AES" />
          </HBox>
          <HBox spacing="6">
            <Button fx:id="viewEncSigBtn" text="View Encrypted Sig" />
            <Button fx:id="decryptEncSigBtn" text="Decrypt Sig" />
            <Button fx:id="verifySigBtn" text="Verify Signature" />
          </HBox>
          <HBox spacing="6">
            <Label text="Verifier public key (PEM/path/base64):" />
            <TextField fx:id="verifierPubField" HBox.hgrow="ALWAYS" />
          </HBox>
          <TextArea fx:id="wireLog" prefRowCount="4" editable="false" promptText="Wire / framed data log (base64)" />
        </VBox>
      </TitledPane>

      <TitledPane text="Chatting" expanded="true">
        <VBox spacing="6">
          <padding>
            <Insets top="6" right="6" bottom="6" left="6" />
          </padding>
          <TextArea fx:id="chatLog" prefRowCount="8" editable="false" />
          <HBox spacing="6">
            <TextField fx:id="chatInput" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendChatBtn" text="Send" />
          </HBox>
        </VBox>
      </TitledPane>

      <TitledPane text="File transfer" expanded="true">
        <VBox spacing="6">
          <padding>
            <Insets top="6" right="6" bottom="6" left="6" />
          </padding>
          <TextArea fx:id="fileLog" prefRowCount="4" editable="false" />
          <HBox spacing="6">
            <Button fx:id="selectFileBtn" text="Select file" />
            <Button fx:id="sendFileBtn" text="Send file" />
            <Button fx:id="demoSendBtn" text="Demo Send &amp; Verify" />
          </HBox>
        </VBox>
      </TitledPane>
    </VBox>
  </center>
</BorderPane>
